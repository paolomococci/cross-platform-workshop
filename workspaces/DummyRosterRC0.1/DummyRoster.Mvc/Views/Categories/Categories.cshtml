@using DummyRoster.Common.EntityModel.Models
@model IEnumerable<Category>

<h1 class="display-4">@ViewData["Title"]</h1>

<div class="table-responsive-lg">
  <table class="table  table-striped">
    <caption>@ViewData["Title"] registered in the management system</caption>
    <thead class="table-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
      </tr>
    </thead>
    <tbody>
      @if (Model is not null)
      {
        @foreach (Category item in Model)
        {
          <tr>
            <th scope="row">
              @Html.DisplayFor(
          modelItem => item.Id
          )
            </th>
            <td>
              @Html.DisplayFor(
          modelItem => item.Name
          )
            </td>
            <td>
              @Html.DisplayFor(
          modelItem => item.Description
          )
            </td>
          </tr>
        }
      }
    </tbody>
  </table>
</div>

<section class="container">
  <a asp-controller="Home" asp-action="Index" style="position:absolute;bottom:80px;left:5px;margin:0;padding:5px 3px;">
    <i class="bi bi-arrow-left-square" style="font-size: 3rem; color: grey;" title="back to Home page"></i>
  </a>
</section>
