@{
    ViewData["Title"] = "AttitudeML";
    List<string>? items = new();
    if (ViewData["schemes"] as List<string> != null)
    {
        items = ViewData["schemes"] as List<string>;
    }
    else
    {
        items.Add("");
    }
}

<div class="uk-text-center uk-card-body uk-animation-scale-up uk-transform-origin-top-center">
<h1 class="uk-heading-large uk-heading-divider">Interact</h1>
</div>

<div class="uk-card uk-card-default uk-card-body uk-width-1-1">
<h3 class="uk-card-title uk-margin-large-bottom uk-heading-small uk-text-center">
    System awaiting processing
</h3>
<form asp-action="Process" enctype="multipart/form-data">
    <label class="uk-form-label" for="interactCommentField">
        Please enter a sentence expressing a state of mind with a maximum of thirty characters:
    </label>
    <div class="uk-margin uk-width-1-1 uk-inline">
        <span class="uk-form-icon" uk-icon="icon: pencil; ratio: 1"></span>
        <input class="uk-input uk-form-large" placeholder="phrase that expresses a state of mind *" 
            type="text" id="interactCommentField" aria-label="" maxlength="30" required="required" name="comment" 
            onkeydown="validateTypedCharacter(event)" onpaste="validatePastedString(this, event)">
    </div>
    <fieldset class="uk-fieldset">
        <legend class="uk-legend"></legend>
        <label class="uk-form-label" for="workbook">
            Please select a scheme to carry out the analysis of the above sentence:
        </label>
        <div class="uk-margin">
            <select name="workbook" class="uk-select uk-width-1-1 uk-form-large" aria-label="select" id="workbook" required="required">
                @foreach (var item in @items!)
                {
                    <option value="@item">@item</option>
                }
            </select>
        </div>
        <div class="uk-margin-top">
            <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-button-large"
                uk-tooltip="title: sending the file containing the data to be processed; pos: bottom">
                submit
            </button>
        </div>
    </fieldset>
</form>
</div>
