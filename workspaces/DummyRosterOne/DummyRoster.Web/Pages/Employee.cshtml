@page
@using DummyRoster.Common.EntityModel.Models
@model DummyRoster.Web.Pages.EmployeeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="card">

  <div class="card-header">
    <h2 class="display-5">@ViewData["Title"]</h2>
  </div>

  <div class="card-body">
    <div class="accordion accordion-flush" id="accordionFlushForEmployees">
      @if (Model.Employees is not null)
      {
        @foreach (Employee item in Model.Employees)
        {
          <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#flush-collapse-@(item.Id)" aria-expanded="false" aria-controls="flush-collapse-@(item.Id)">
                @item.Name
              </button>
            </h2>
            <div id="flush-collapse-@(item.Id)" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
          data-bs-parent="#accordionFlushForEmployees">
              <div class="accordion-body">
                <table class="table">
                  <caption>Details about the Employee</caption>
                  <thead>
                    <tr>
                      <th scope="col">Name</th>
                      <th scope="col">Country</th>
                      <th scope="col">Email</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>@item.Name</td>
                      <td>@item.Country</td>
                      <td>@item.Email</td>
                    </tr>
                  </tbody>
                  <tfoot>
                    <tr>
                      <th scope="row">Employee ID: </th>
                      <td>@item.Id</td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        }
      }
    </div>
  </div>

</div>
