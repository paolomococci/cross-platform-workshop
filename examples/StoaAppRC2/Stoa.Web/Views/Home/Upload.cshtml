@{
    ViewData["Title"] = "StoaApp";
}
@model PostModel

<div class="uk-text-center">
    <h1 class="uk-heading-large">Upload</h1>
</div>
<div class="uk-card uk-card-default">
    <form asp-action="Upload" enctype="multipart/form-data">
        <fieldset class="uk-fieldset">
            <legend class="uk-margin">form dedicated to uploading one file at a time</legend>
            <label for="caption" class="uk-label">Caption</label>
            <div class="uk-child-width-1-2">
                <input class="uk-input uk-width-1-1 uk-form-large" type="text" id="caption" asp-for="Caption" required>
                <div id="captionHelp" class="uk-comment">
                    some help for the caption field
                </div>
            </div>
            <label for="description" class="uk-label uk-margin-top">Description</label>
            <div class="uk-child-width-1-2">
                <input class="uk-input uk-width-1-1 uk-form-large" type="text" id="description" asp-for="Description"
                  required>
                <div id="descriptionHelp" class="uk-comment">
                    some help for the description field
                </div>
            </div>
            <label for="concept" class="uk-label uk-margin-top">Concept</label>
            <div class="uk-child-width-1-2">
                <input class="uk-button uk-button-default uk-width-1-1" type="file" id="concept" asp-for="Concept"
                  required>
                <div id="conceptHelp" class="uk-comment">
                    some help for the concept field
                </div>
            </div>
            <div class="uk-margin-top">
                <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-button-large">Submit</button>
            </div>
        </fieldset>
    </form>
</div>
