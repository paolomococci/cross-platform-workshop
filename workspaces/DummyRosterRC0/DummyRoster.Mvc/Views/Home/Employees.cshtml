@using DummyRoster.Common.EntityModel.Models
@model IEnumerable<Employee>

<h2>@ViewData["Title"]</h2>

<table>
  <caption>@ViewData["Title"] registered in the management</caption>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Birth Date</th>
      <th>Todo</th>
      <th>Todo</th>
    </tr>
  </thead>
  <tbody>
    @if (Model is not null)
    {
      @foreach (Employee item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(
              modelItem => item.Id
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Name
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.BirthDate
            )
          </td>
          <td>
            todo
          </td>
          <td>
            todo
          </td>
        </tr>
      }
    }
  </tbody>
</table>
