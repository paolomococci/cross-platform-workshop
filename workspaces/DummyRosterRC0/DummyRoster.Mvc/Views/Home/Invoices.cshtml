@using DummyRoster.Common.EntityModel.Models
@model IEnumerable<Invoice>

<h2>@ViewData["Title"]</h2>

<table>
  <caption>@ViewData["Title"] registered in the management</caption>
  <thead>
    <tr>
      <th>Id</th>
      <th>Form Id</th>
      <th>Product Id</th>
      <th>Note</th>
      <th>Unit Price</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
    @if (Model is not null)
    {
      @foreach (Invoice item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(
              modelItem => item.Id
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.FormId
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.ProductId
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Note
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.UnitPrice
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Quantity
            )
          </td>
        </tr>
      }
    }
  </tbody>
</table>
