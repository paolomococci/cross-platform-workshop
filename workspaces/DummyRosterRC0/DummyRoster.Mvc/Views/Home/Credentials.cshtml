@using DummyRoster.Common.EntityModel.Models
@model IEnumerable<Credential>

<h2>@ViewData["Title"]</h2>

<table>
  <caption>@ViewData["Title"] registered in the management</caption>
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Fax</th>
    </tr>
  </thead>
  <tbody>
    @if (Model is not null)
    {
      @foreach (Credential item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(
              modelItem => item.Id
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Email
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Phone
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Fax
            )
          </td>
        </tr>
      }
    }
  </tbody>
</table>
