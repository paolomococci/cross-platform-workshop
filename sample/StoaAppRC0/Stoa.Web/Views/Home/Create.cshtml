@{
  ViewData["Title"] = "StoaApp";
}
@model PostModel

<div class="text-center">
  <h1 class="display-4">Create</h1>
  <div class="mb-3 row">
    <form asp-action="Create" enctype="multipart/form-data">
      <label for="caption" class="col-sm-2 col-form-label">Caption</label>
      <div class="col-sm-10">
        <input type="text" id="caption" asp-for="Caption">
      </div>
      <label for="description" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <input type="text" id="description" asp-for="Description">
      </div>
      <label for="concept" class="col-sm-2 col-form-label">Concept</label>
      <div class="mb-3">
        <input class="form-control" type="file" id="concept" asp-for="Concept">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
      </div>
    </form>
  </div>
</div>
