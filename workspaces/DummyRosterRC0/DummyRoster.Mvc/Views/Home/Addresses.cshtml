@using DummyRoster.Common.EntityModel.Models
@model IEnumerable<Address>

<h2>@ViewData["Title"]</h2>

<table>
  <caption>@ViewData["Title"] registered in the management</caption>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Civic</th>
      <th>City</th>
      <th>District</th>
      <th>Postcode</th>
      <th>Country</th>
    </tr>
  </thead>
  <tbody>
    @if (Model is not null)
    {
      @foreach (Address item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(
              modelItem => item.Id
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Name
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Civic
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.City
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.District
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Postcode
            )
          </td>
          <td>
            @Html.DisplayFor(
              modelItem => item.Country
            )
          </td>
        </tr>
      }
    }
  </tbody>
</table>
