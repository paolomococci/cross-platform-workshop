@{
    ViewData["Title"] = "AttitudeML";
}

<div class="uk-text-center uk-card-body uk-animation-scale-up uk-transform-origin-top-center">
    <h1 class="uk-heading-large uk-heading-divider">Upload</h1>
</div>

<div class="uk-card uk-card-default uk-card-body uk-width-1-1">
    <h3 class="uk-card-title uk-margin-large-bottom uk-heading-small uk-text-center">
        Upload dataset
    </h3>
    <form asp-action="Upload" enctype="multipart/form-data">
        <fieldset class="uk-fieldset">
            <legend class="uk-margin">Form dedicated to uploading one dataset file at a time.</legend>
            <div class="uk-child-width-1-2">
                <label for="dataset" class="uk-label uk-width-1-1 uk-margin-top">Dataset</label>
                <input class="uk-button uk-button-default uk-width-1-1 uk-form-large" 
                  type="file" id="dataset" name="formFile" required>
                <div id="conceptHelp" class="uk-comment">
                    Please select the file to upload.
                </div>
            </div>
            <div class="uk-margin-top">
                <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-button-large"
                  uk-tooltip="title: upload the data file to the system; pos: bottom">
                    submit
                </button>
            </div>
        </fieldset>
    </form>
</div>
