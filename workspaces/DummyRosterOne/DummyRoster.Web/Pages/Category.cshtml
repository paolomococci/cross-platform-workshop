@page
@using DummyRoster.Common.EntityModel.Models
@model DummyRoster.Web.Pages.CategoryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="card">

  <div class="card-header">
    <h2 class="display-5">@ViewData["Title"]</h2>
  </div>

  <div class="accordion accordion-flush" id="accordionFlushForEmployees">
    @if (Model.Categories is not null)
    {
      @foreach (Category item in Model.Categories)
      {
        <div class="accordion-item">
          <h2 class="accordion-header" id="flush-headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#flush-collapse-@(item.Id)" aria-expanded="false" aria-controls="flush-collapse-@(item.Id)">
              @item.Name
            </button>
          </h2>
          <div id="flush-collapse-@(item.Id)" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
              data-bs-parent="#accordionFlushForEmployees">
            <div class="accordion-body">
              <table class="table">
                <caption>Details about the Category</caption>
                <thead>
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Registration Date</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.RegistrationDate</td>
                  </tr>
                </tbody>
                <tfoot>
                  <tr>
                    <th scope="row">Category ID: </th>
                    <td>@item.Id</td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      }
    }
  </div>

</div>
