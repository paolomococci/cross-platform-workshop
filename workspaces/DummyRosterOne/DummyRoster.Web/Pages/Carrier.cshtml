@page
@using DummyRoster.Common.EntityModel.Models
@model DummyRoster.Web.Pages.CarrierModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
  #nullable disable
}

<div class="card">

  <div class="card-header">
    <h2 class="display-5">@ViewData["Title"]</h2>
  </div>

  <div class="accordion accordion-flush" id="accordionFlushForEmployees">
    @if (Model.Carriers is not null)
    {
      @foreach (Carrier item in Model.Carriers)
      {
        <div class="accordion-item">
          <h2 class="accordion-header" id="flush-headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#flush-collapse-@(item.Id)" aria-expanded="false" aria-controls="flush-collapse-@(item.Id)">
              @item.Name
            </button>
          </h2>
          <div id="flush-collapse-@(item.Id)" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
              data-bs-parent="#accordionFlushForEmployees">
            <div class="accordion-body">
              <table class="table">
                <caption>Details about the Carrier</caption>
                <thead>
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Country</th>
                    <th scope="col">Email</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>@item.Name</td>
                    <td>@item.Country</td>
                    <td>@item.Email</td>
                  </tr>
                </tbody>
                <tfoot>
                  <tr>
                    <th scope="row">Carrier ID: </th>
                    <td>@item.Id</td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      }
    }
  </div>

  <div>
    <p>Please, complete the fields of the following form.</p>
    <form method="post">
      <div>
        <input asp-for="Carrier.Name" placeholder="Name"/>
      </div>
      <div>
        <input asp-for="Carrier.Country" placeholder="Country"/>
      </div>
      <div>
        <input asp-for="Carrier.Email" placeholder="Email"/>
      </div>
      <input type="submit"/>
    </form>
  </div>

</div>
